@page "/register"
@inject NavigationManager nav;
@inject UserController userController;

<div id="register" class="flex flex-col min-h-screen justify-center items-center login font-oswald p-2">
    <h1 class="font-oswald uppercase text-4xl text-neutral-100 mb-5 font-semibold uppercase">Register</h1>
    <EditForm Model="@user" OnValidSubmit="@SaveUserAsync" class="w-full max-w-lg bg-opacity-30 rounded shadow-lg px-5">
        <DataAnnotationsValidator/>
        <div class="flex flex-wrap -mx-3 mb-3">
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="flex block uppercase tracking-wide text-neutral-100 text-xs font-bold mb-2 gap-3" for="grid-first-name">
                    First Name <ValidationMessage class="text-red-800" For="@(()=> user.FirstName)" />
                </label>
                <InputText @bind-Value="user.FirstName" for="FirstName" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Jane" />
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="flex gap-3 uppercase tracking-wide text-neutral-100 text-xs font-bold mb-2" for="grid-first-name">
                    Last Name
                <ValidationMessage class="text-red-800" For="@(()=> user.LastName)" />
                </label>
                <InputText @bind-Value="user.LastName" for="LastName" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Doe" />
            </div>
            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="flex gap-3 uppercase tracking-wide text-neutral-100 text-xs font-bold mb-2" for="grid-first-name">
                    Email
                    <ValidationMessage class="text-red-800" For="@(()=> user.Email)" />
                </label>
                <InputText @bind-Value="user.Email" for="Email" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="example@email.com" />
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="flex gap-3 uppercase tracking-wide text-neutral-100 text-xs font-bold mb-2" for="grid-first-name">
                    Password
                    <ValidationMessage class="text-red-800" For="@(()=> user.Password)" />
                </label>
                <InputText @bind-Value="user.Password" for="Password" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="password" placeholder="********" />
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="flex gap-3 uppercase tracking-wide text-neutral-100 text-xs font-bold mb-2" for="grid-first-name">
                    Confirm
                    <ValidationMessage class="text-red-800" For="@(()=> user.Confirm)" />
                </label>
                <InputText @bind-Value="user.Confirm" for="Confirm" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="password" placeholder="********" />
            </div>
        </div>
        <button type="submit" class="bg-indigo-700 hover:bg-indigo-500 text-neutral-100 font-bold py-2 px-4 rounded w-full shadow-lg">Submit</button>
    </EditForm>
    <p class="text-neutral-100 text-sm my-3">Wanted to Login instead? <a class="underline italic" href="/login">Go here.</a></p>
</div>
@code 
{
    private User user = new();

    private async void SaveUserAsync()
    {
        UserWithToken newUser = await userController.ApiCreateUserAsync(user);

        nav.NavigateTo("/");
    }
}
